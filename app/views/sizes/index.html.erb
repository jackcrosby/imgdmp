<h1>Listing sizes</h1>

<table>
  <tr>
    <th>File path</th>
    <th>Width</th>
    <th>Height</th>
    <th>Description of size</th>
  </tr>

<% for size in @sizes %>
  <tr>
    <td><%=h size.file_path %></td>
    <td><%=h size.width %></td>
    <td><%=h size.height %></td>
    <td><%=h size.description_of_size %></td>
    <td><%= link_to 'Show', size %></td>
    <td><%= link_to 'Edit', edit_size_path(size) %></td>
    <td><%= link_to 'Destroy', size, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

